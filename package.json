{
  "name": "pcg-gen",
  "sideEffects": false,
  "version": "1.1.0",
  "description": "A permuted congruential generator generator",
  "main": "./dist/index.js",
  "files": [
    "/dist/",
    "!/dist/**/__tests__/*.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts,.json,.js src",
    "prepare": "husky install && npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "prng",
    "pcg",
    "random",
    "generator"
  ],
  "homepage": "https://github.com/philihp/pcg-gen#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philihp/pcg-gen.git"
  },
  "bugs": {
    "url": "https://github.com/philihp/pcg-gen/issues"
  },
  "author": "Philihp Busby <philihp@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.23.4",
    "@babel/core": "7.23.7",
    "@babel/preset-env": "7.23.8",
    "@philihp/eslint-config": "6.1.0",
    "@philihp/prettier-config": "1.0.0",
    "@types/jest": "29.5.11",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.6.3",
    "fast-shuffle": "6.1.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "prettier": "3.2.4",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "dist/"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,json,ts}": [
      "eslint --ext .js,.json,.ts --fix"
    ]
  },
  "prettier": "@philihp/prettier-config",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:jest/all",
      "plugin:@typescript-eslint/recommended",
      "@philihp"
    ],
    "settings": {
      "react": {
        "version": "0"
      },
      "import/extensions": [
        ".js",
        ".ts"
      ],
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts"
        ]
      },
      "import/resolver": {
        "typescript": {},
        "node": {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      }
    },
    "rules": {
      "jest/no-conditional-in-test": "off",
      "no-conditional-in-test": "off",
      "no-restricted-syntax": [
        "off",
        "ForOfStatement"
      ]
    }
  }
}
