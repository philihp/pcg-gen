{
  "name": "permuted-congruential-generator",
  "sideEffects": false,
  "version": "0.0.0",
  "description": "Pseudorandom number generator which applies an output permutation function to improve the statistical properties of a modulo-2^n linear congruential generator",
  "main": "./dist/index.js",
  "files": [
    "/dist/",
    "!/dist/**/__tests__/*.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts,.json,.js src",
    "prepare": "husky install && npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "prng",
    "random",
    "generator"
  ],
  "author": "Philihp Busby <philihp@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@philihp/eslint-config": "6.0.2",
    "@philihp/prettier-config": "1.0.0",
    "@types/jest": "29.2.2",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "eslint": "8.27.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "fast-shuffle": "5.0.2",
    "husky": "8.0.1",
    "jest": "29.2.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "dist/"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,json,ts}": [
      "eslint --ext .js,.json,.ts --fix"
    ]
  },
  "prettier": "@philihp/prettier-config",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:jest/all",
      "plugin:@typescript-eslint/recommended",
      "@philihp"
    ],
    "settings": {
      "import/extensions": [
        ".js",
        ".ts"
      ],
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts"
        ]
      },
      "import/resolver": {
        "typescript": {},
        "node": {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      }
    },
    "rules": {
      "jest/no-conditional-in-test": "off",
      "no-conditional-in-test": "off",
      "no-restricted-syntax": [
        "off",
        "ForOfStatement"
      ]
    }
  }
}
